# ===========================================
# LeadrsAgents - Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values
# cp env.template .env.local

# ------------------------------------------
# Supabase
# ------------------------------------------
# Backend (API Server)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Frontend (Next.js - must start with NEXT_PUBLIC_)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ------------------------------------------
# LLM Providers
# ------------------------------------------
# OpenAI (GPT-5.2) - Primary for writing/copywriting
OPENAI_API_KEY=

# Google AI (Gemini 3 Pro) - Primary for reasoning/analysis
GEMINI_API_KEY=

# ------------------------------------------
# Google OAuth (Calendar, Gmail, Drive)
# ------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Google Service Account (for Drive access)
# Paste the entire JSON key here as a single line
GOOGLE_SERVICE_ACCOUNT_KEY=

# Google Drive folder ID for knowledge
GOOGLE_DRIVE_FOLDER_ID=

# ------------------------------------------
# WhatsApp (Green API)
# ------------------------------------------
GREEN_API_INSTANCE_ID=
GREEN_API_TOKEN=

# ------------------------------------------
# ClickUp
# ------------------------------------------
CLICKUP_API_TOKEN=
CLICKUP_WORKSPACE_ID=

# ------------------------------------------
# Apify (Web Scraping)
# ------------------------------------------
APIFY_TOKEN=

# ------------------------------------------
# Authentication & Security
# ------------------------------------------
# JWT secret key for session tokens (generate with: openssl rand -hex 64)
JWT_SECRET=

# Cookie secret for httpOnly cookies (generate with: openssl rand -hex 32)
COOKIE_SECRET=

# ------------------------------------------
# App Configuration
# ------------------------------------------
NODE_ENV=development
LOG_LEVEL=debug

# API Server Configuration
PORT=4000
HOST=0.0.0.0

# Frontend URL for redirects
FRONTEND_URL=http://localhost:3000

# Default user for CLI testing
DEFAULT_USER_EMAIL=

# Allowed email domain for authentication (e.g., ldrsgroup.com)
ALLOWED_DOMAIN=ldrsgroup.com

